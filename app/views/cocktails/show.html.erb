<div class="container">
<h1 class="text-center padded-15px"><%= @cocktail.name %></h1>
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="card card-large margin-15px" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://wallpaperscraft.com/image/cocktails_summer_mood_fruit_71163_3840x2160.jpg');">
        <div class="card-category">cocktail recipe</div>
          <div class="card-description">
            <h2><%= link_to @cocktail.name, cocktail_path(@cocktail) %></h2>
            <ul>
              <% @cocktail.ingredients.each do |ingredient| %>
                <li>
                  <%= ingredient.name + ", " %>
                  <% @cocktail.doses.each do |dose| %>
                    <%= dose.description %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
          <%= cl_image_tag @cocktail.photo, crop: :fill, class: "card-user avatar" %>
          <a class="card-link" href='<%= cocktail_path(@cocktail) %>'></a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="text-center padded-30px">
  <%= link_to "Add Cocktail", new_cocktail_path, class: "btn btn-primary btn-lg margin-15px" %>
  <%= link_to "Back to Cocktails", cocktails_path + "#cocktails", class: "btn btn-primary btn-lg margin-15px" %>
</div>
